<resources>

    <style name="activity_style">
        <item name="android:background">#000</item>
        <item name="android:padding">7dp</item>
    </style>

    <style name="activity_list_listview_style">
        <item name="android:background">@drawable/listview</item>
        <item name="android:padding">7dp</item>
    </style>

    <style name="button_style">
        <item name="android:background">@drawable/button</item>
        <item name="android:textColor">#FFF</item>
    </style>

    <style name="edittext_style">
        <item name="android:background">@drawable/edittext</item>
    </style>

    <style name="note_style">
        <item name="android:background">@drawable/note_background</item>
        <item name="android:textColor">#000</item>
    </style>

    <style name="note_name_style">
        <item name="android:textSize">18dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="note_datetime_style">
        <item name="android:textSize">12dp</item>
        <item name="android:textStyle">italic</item>
    </style>
</resources>
